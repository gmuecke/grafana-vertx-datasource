<configuration status="OFF">
	<appenders>
		<Console name="Console" target="SYSTEM_ERR">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
	</appenders>
	<Loggers>
		<Logger name="io.devcon5" level="TRACE" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="io.devcon5" level="TRACE" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Root level="info">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</configuration>
